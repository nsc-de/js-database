{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": ".",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "mapRoot": "sourcemaps",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}